# py3status configuration file
order += "online_status"
order += "battery_level"
order += "time"
order += "static_string exit"

general {
    color_bad = "{{ numix.darker_fg }}"
    color_good = "{{ numix.dark_fg }}"
}

online_status {
    icon_off = ""
    icon_on = ""
    url = "https://www.startpage.com/"
}

battery_level {
    blocks = ""
    charging_character = ""
    color_bad = "{{ numix.warning_bg }}"
    color_charging = "{{ numix.dark_fg }}"
    format = "{percent}% {icon}"
}

static_string exit {
    format = ""
    on_click 1 = "exec --no-startup-id i3-msg exit"
}
